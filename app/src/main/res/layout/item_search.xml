<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:minHeight="64dp"
    android:padding="5dp"
    android:background="@color/item_search">


    <ImageView
        android:id="@+id/searchItemImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/searchItemNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/searchItemImageView"
        android:layout_toRightOf="@id/searchItemImageView"
        android:maxLines="1"
        android:textSize="@dimen/search_text_size"
        android:paddingTop="20dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/text_search" />

    <TextView
        android:id="@+id/searchItemCategoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchItemCategoryTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_toEndOf="@id/searchItemImageView"
        android:layout_toRightOf="@id/searchItemImageView"
        android:maxLines="2"
        android:paddingTop="40dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp" />

</RelativeLayout>
